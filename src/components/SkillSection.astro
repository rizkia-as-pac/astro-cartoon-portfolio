---
const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base}${path.replace(/^\//, "")}`;
---

<section class="up-skill-section" id="skill-section">
  <div class="skill-content">
    <h2 class="skill-title">Skills</h2>

    <div class="skill-groups">
      <div class="skill-group">
        <h3 class="skill-group-title">Backend</h3>
        <div class="skills">
          <img src={withBase("/svg/golang.svg")} alt="golang" />
          <img src={withBase("/icons/fiber.png")} alt="fiber" />
          <img src={withBase("/icons/asynq.png")} alt="asynq" />
          <img class="add-bg" src={withBase("/svg/nodejs.svg")} alt="nodejs" />
          <img class="add-bg" src={withBase("/svg/bun.svg")} alt="bun" />
          <img src={withBase("/svg/typescript.svg")} alt="typescript" />
          <img src={withBase("/svg/javascript.svg")} alt="javascript" />
          <img class="add-bg" src={withBase("/svg/expressjs.svg")} alt="expressjs" />
          <img class="add-bg" src={withBase("/svg/fastify.svg")} alt="fastify" />
          <img class="add-bg" src={withBase("/svg/socketio.svg")} alt="socketio" />
        </div>
      </div>

      <div class="skill-group">
        <h3 class="skill-group-title">Frontend</h3>
        <div class="skills">
          <img src={withBase("/svg/react.svg")} alt="react" />
          <img src={withBase("/svg/svelte.svg")} alt="svelte" />
          <img src={withBase("/svg/flutter.svg")} alt="flutter" />
          <img src={withBase("/icons/tauri.png")} alt="tauri" />
          <img class="add-bg" src={withBase("/svg/nextjs.svg")} alt="nextjs" />
        </div>
      </div>

      <div class="skill-group">
        <h3 class="skill-group-title">Database & Data Access</h3>
        <div class="skills">
          <img src={withBase("/svg/postgresql.svg")} alt="postgresql" />
          <img class="add-bg" src={withBase("/svg/mysql.svg")} alt="mysql" />
          <img src={withBase("/svg/mongodb.svg")} alt="mongodb" />
          <img src={withBase("/icons/pocketbase.png")} alt="pocketbase" />
          <img src={withBase("/svg/redis.svg")} alt="redis" />
          <img src={withBase("/svg/prismaorm.svg")} alt="prismaorm" />
          <img class="add-bg" src={withBase("/icons/sqlc.png")} alt="sqlc" />
        </div>
      </div>

      <div class="skill-group">
        <h3 class="skill-group-title">DevOps</h3>
        <div class="skills">
          <img src={withBase("/svg/linux.svg")} alt="linux" />
          <img class="add-bg" src={withBase("/svg/docker.svg")} alt="docker" />
          <img src={withBase("/svg/podman.svg")} alt="podman" />
        </div>
      </div>

      <div class="skill-group">
        <h3 class="skill-group-title">Development Tools</h3>
        <div class="skills">
          <img src={withBase("/svg/vim.svg")} alt="vim" />
          <img src={withBase("/svg/git.svg")} alt="git" />
          <img src={withBase("/svg/postman.svg")} alt="postman" />
          <img src={withBase("/svg/figma.svg")} alt="figma" />
          <img src={withBase("/icons/dbdiagramio.png")} alt="dbdiagramio" />
          <img src={withBase("/icons/vitepress.png")} alt="vitepress" />
        </div>
      </div>
    </div>
  </div>
</section>

